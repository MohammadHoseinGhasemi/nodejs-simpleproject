<!doctype html>
<html lang="en">
    <%- include('../partials/header.ejs') %>
<body>

<%- include('../partials/nav.ejs') %>

<div class="blogs content">
    <h2>All Blogs</h2>
    <% if(blogs. length > 0) { %>
        <% blogs.forEach(blog =>{ %>
            <a class="link-border" href="/blogs/<%= blog._id %>">
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
        </a>
    <% }) %>
    <% } else { %>
        <div>
            <p>There are no blogs here . . .</p>
            <h3>Create New Blog Here</h1>
            <a href="/blogs/create">create</a>
        </div>
       
    <% } %>
</div>

<%- include('../partials/footer.ejs') %>
</body>
</html>
